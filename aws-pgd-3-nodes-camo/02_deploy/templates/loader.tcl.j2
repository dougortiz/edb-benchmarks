#!/usr/bin/env tclsh

global complete
proc wait_to_complete {} {
        global complete
        set complete [vucomplete]
        if {!$complete} {after 5000 wait_to_complete} else { exit }
}
dbset db pg
diset connection pg_host {{ infra.servers.machines.pgd1.private_ip }}
diset connection pg_port 5444
buildschema
wait_to_complete
